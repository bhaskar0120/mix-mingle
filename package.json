{
  "name": "mix-mingle",
  "version": "1.0.0",
  "description": "A simple random chat site",
  "main": "index.js",
  "scripts": {
    "build": "rollup -c & npm run css-build & tsc & node index.js",
    "build-svelte" : "rollup -c",
    "dev": "rollup -c -w",
    "start": "live-server public 8080 && ",
    "css-watch": "tailwindcss -o public/global.css -i public/tailwind.css --watch",
    "css": "tailwindcss -o public/global.css -i public/tailwind.css ",
    "css-build": "tailwindcss -o public/global.css -i public/tailwind.css --minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bhaskar0120/mix-mingle.git"
  },
  "keywords": [
    "Typescript",
    "Node",
    "WebSocket",
    "Chat",
    "HTTP"
  ],
  "author": "bhaskar0120 <Bhardwaj Bhaskar>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bhaskar0120/mix-mingle/issues"
  },
  "homepage": "https://github.com/bhaskar0120/mix-mingle#readme",
  "dependencies": {
    "@types/node": "^17.0.8",
    "@types/ws": "^8.2.2",
    "express": "^4.17.2",
    "ws": "^8.4.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "autoprefixer": "^10.4.2",
    "live-server": "^1.2.1",
    "nodemon": "^2.0.15",
    "postcss": "^8.4.5",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "tailwindcss": "^3.0.11"
  }
}
